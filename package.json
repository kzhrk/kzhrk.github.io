{
  "name": "files",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run scss & npm run pug & npm run cpx & npm run webpack & npm run server",
    "server": "browser-sync start --server ./public --files ./public",
    "scss": "node-sass ./src/scss/*.scss -o public/css -w",
    "webpack": "webpack -w",
    "pug": "pug ./src/pug -wo ./public",
    "deploy": "gh-pages -b master -d public",
    "cpx": "cpx \"./src/assets/**/*\" ./public -w"
  },
  "author": "kzhrk",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "copy": "^0.3.1",
    "cpx": "^1.5.0",
    "gh-pages": "^1.0.0",
    "node-sass": "^4.5.3",
    "pug": "^2.0.0-rc.4",
    "reset-css": "^2.2.1",
    "sanitize.css": "^5.0.0",
    "watch": "^1.0.2",
    "webpack": "^3.6.0"
  }
}
